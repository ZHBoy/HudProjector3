<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <FrameLayout
                android:id="@+id/info_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >
            </FrameLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/main_ll_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" >

            <LinearLayout
                android:id="@+id/ll_connectitems"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/main_connectitems_marginright"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/iv_remote"
                    android:layout_width="@dimen/main_connectitems_width"
                    android:layout_height="@dimen/main_connectitems_height"
                    android:layout_marginRight="@dimen/main_connectitems_margin"
                    android:src="@drawable/icon_controlpad_disable"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/iv_obd"
                    android:layout_width="@dimen/main_connectitems_width"
                    android:layout_height="@dimen/main_connectitems_height"
                    android:layout_marginRight="@dimen/main_connectitems_margin"
                    android:src="@drawable/icon_obd_disable"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/iv_hotspot"
                    android:layout_width="@dimen/main_connectitems_width"
                    android:layout_height="@dimen/main_connectitems_height"
                    android:layout_marginRight="@dimen/main_connectitems_margin"
                    android:src="@drawable/icon_wifi_disable"
                    android:visibility="invisible" />

                <ImageView
                    android:id="@+id/iv_network"
                    android:layout_width="@dimen/main_connectitems_width"
                    android:layout_height="@dimen/main_connectitems_height"
                    android:layout_marginRight="@dimen/main_connectitems_margin"
                    android:src="@drawable/icon_network_5_disable"
                    android:visibility="invisible" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/main_ll_key"
            android:layout_width="255dp"
            android:layout_height="match_parent"
            android:layout_gravity="left|center"
            android:background="@drawable/speechcontent_bg"
            android:focusable="false"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="20dp"
            android:visibility="gone" >

            <RelativeLayout
                android:id="@+id/rl_icon_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp" >

                <ImageView
                    android:id="@+id/iv_speechicon"
                    android:layout_width="100dip"
                    android:layout_height="100dip"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_speechcontentcontainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>