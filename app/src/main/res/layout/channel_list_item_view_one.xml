<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:test="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" 
    android:layout_marginLeft="22dp"
    android:layout_marginRight="22dp"
    android:gravity="center"
    android:orientation="vertical" >

    <com.infisight.hudprojector.douban.channel.CircleImageView
        android:id="@+id/channel_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/cover_expand"
        test:border_color="#abc"
        test:border_width="2dp" />

    <TextView
        android:id="@+id/channel_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1111"
        android:textSize="@dimen/douban_category_font_size" />

</LinearLayout>