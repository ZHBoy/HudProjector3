<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/ph_ll_backgroud"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2" >

        <LinearLayout
            android:id="@+id/fh_ll_001"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="30dip" >

            <com.infisight.hudprojector.widget.CircleImageView
                android:id="@+id/fp_im_person_icon"
                android:layout_width="120.0dip"
                android:layout_height="120.0dip"
                android:gravity="center" />

            <TextView
                android:id="@+id/fp_tv_phone_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingRight="10dip"
                android:paddingTop="40dip"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fh_ll_003"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingRight="30dip" >

            <TextView
                android:id="@+id/fp_tv_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="18dip"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/fp_tv_phone_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="18dip"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/fp_tv_phone_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:paddingTop="18dip"
                android:textSize="30sp" />

            <ImageView
                android:id="@+id/fp_im_hang_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/control_bg"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_horizontal"
                android:paddingRight="5dip"
                android:paddingTop="18dip"
                android:src="@drawable/hang_up" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>